@model IEnumerable<AutoPart.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutUser2.cshtml";
}

<style>
    .v {
        min-height: 100vh;
    }

    .footerr {
        position: fixed;
        bottom: 0;
        left: 0;
    }
</style>

<h2 class="text-center fw-bold my-3">Orders Placed By Customers</h2>

<div class="container v">
    <table class="table table-striped" id="customers">
        <thead>
            <tr class="fs-5">
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.State)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.State)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.ActionLink("View Order", "ViewOrder", new { id = item.Id }, new { @class = "btn btn-secondary" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @Html.Partial("_PartialFooter")
</div>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#customers").DataTable({
                "lengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]]
            });
        })
    </script>
}
